{% extends 'base.html.twig' %}

{% block title %}Log{% endblock %}

{% block body %}
    <h1>Log</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ log.action }}</td>
            </tr>
            <tr>
                <th>Cible</th>
                <td>{{ log.cible }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ log.description }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ log.timestamp ? log.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_log_crud_index') }}">back to list</a>

    <a href="{{ path('app_log_crud_edit', {'id': log.id}) }}">edit</a>

    {{ include('log_crud/_delete_form.html.twig') }}
{% endblock %}

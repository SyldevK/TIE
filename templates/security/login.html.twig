{% extends 'base.html.twig' %}

{% block body %}
<h1>Connexion</h1>

<form method="post">
    <input type="text" name="_username" value="{{ last_username }}" placeholder="Email" required>
    <input type="password" name="_password" placeholder="Mot de passe" required>
    <button type="submit">Se connecter</button>

    {% if error %}
        <div style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>
{% endblock %}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-container">
    <img src="{{ asset('images/logo_tie.png') }}" alt="Logo">
    <h1>Connexion</h1>

    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <input type="text" name="_username" value="{{ last_username }}" placeholder="Email" required>
        <input type="password" name="_password" placeholder="Mot de passe" required>
        <button type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}
